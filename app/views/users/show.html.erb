
<%= image_tag user_avatar(current_user, 100), class: "rounded-circle" %>

<div class="my-5">
  <table class="table table-bordered w-50">
    <tbody>
      <tr>
        <th scope="row">Username</th>
        <td> <%= @user.user_name %> </td>
      </tr>
      <tr>
        <th scope="row">Name</th>
        <td> <%= @user.full_name %> </td>
      </tr>
      <tr>
        <th scope="row">Email</th>
        <td> <%= @user.email %> </td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to "Edit user", edit_user_registration_path, class: "nav-link ps-0"  %>

<% @user_posts.each do |post| %>
  <%= render 'posts/post_box', post: post %>
<% end %>
 