

  <div class="my-3">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <% f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" , placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="mb-3">
    <% f.label :user_name %>
    <%= f.text_field :user_name, autofocus: true, class: "form-control" , placeholder: "Username", autocomplete: "user_name" %>
  </div>

  <div class="mb-3">
    <% f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control" , placeholder: "First name", autocomplete: "first_name" %>
  </div>

  <div class="mb-3">
    <% f.label :family_name %>
    <%= f.text_field :family_name, autofocus: true, class: "form-control" , placeholder: "Family name", autocomplete: "family_name" %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <% f.label :password %>
    <%= f.password_field :password, class: "form-control" , placeholder: "New password (#{@minimum_password_length} characters min)  =>  leave blank if you don\'t want to change it", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <% end %>
    
  </div>

  <div class="mb-3">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" , placeholder: 'New password confirm', autocomplete: "new-password" %>
  </div>


  <div class="mb-3">
    <% f.label :current_password %>
    <%= f.password_field :current_password, class: "form-control" , placeholder: 'Current password to confirm changes', autocomplete: "new-password" %>
  </div>

  <%= f.submit "Update", class: "btn btn-primary" %>

<% end %>

<div class="my-5">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-secondary" %>
</div>

<%= link_to "Back", :back %>
