
<h1>Posts</h1>


<% @posts.each do |post| %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <p class="card-text"><%= post.post %></p>
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>

<% end %>
 

<br>

<%= link_to 'New Post', new_post_path %>
